{
  "xsappname": "invoicing-capm-dev-auth",
  "tenant-mode": "shared",
  "scopes": [
    {
      "name": "$XSAPPNAME.User",
      "description": "User access"
    },
    {
      "name": "$XSAPPNAME.BillingService.read",
      "description": "Access Billing API"
    }
  ],
  "role-templates": [
    {
      "name": "User",
      "description": "User Role",
      "scope-references": ["$XSAPPNAME.User"]
    },
    {
      "name": "BillingService",
      "description": "Billing Service Role",
      "scope-references": ["$XSAPPNAME.BillingService.read"]
    }
  ]
}
